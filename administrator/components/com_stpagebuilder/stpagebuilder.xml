<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="3.1" method="upgrade">
    <name>COM_STPAGEBUILDER</name>
    <creationDate>Aug 2013</creationDate>
    <author>Pham Tien Duc</author>
    <authorEmail>ducphamtien@gmail.com</authorEmail>
    <authorUrl>shinetheme.com</authorUrl>
    <copyright>Copyright 2013 the Shinetheme.com </copyright>
    <license>GNU/GPL</license>
    <version>2.0.1</version>

    <scriptfile>installfile.php</scriptfile>

    <install folder="admin/sql">
        <sql>
            <file driver="mysql" charset="utf8">sql/install.stpagebuilder.sql</file>
        </sql>
    </install>
    <uninstall folder="admin/sql">
        <sql>
            <file driver="mysql" charset="utf8">sql/uninstall.stpagebuilder.sql</file>
        </sql>
    </uninstall>
	
	<files folder="site">
        <filename>access.xml</filename>
		<folder>controllers</folder>
		<folder>views</folder>
		<folder>models</folder>
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>metadata.xml</filename>
		<filename>stpagebuilder.php</filename>
	</files>
	
	
    <administration>
        <menu link="option=stpagebuilder" >COM_STPAGEBUILDER</menu>
        <files folder="admin">
            <filename>access.xml</filename>
            <filename>config.xml</filename>
            <filename>controller.php</filename>
            <filename>index.html</filename>
            <filename>stpagebuilder.php</filename>
            <folder>sql</folder>
            <folder>controllers</folder>
            <folder>helpers</folder>
            <folder>tables</folder>
            <folder>models</folder>
            <folder>views</folder>
            <folder>assets</folder>
        </files>
		<languages folder="admin/language">
            <language tag="en-GB">en-GB.com_stpagebuilder.ini</language>
            <language tag="en-GB">en-GB.com_stpagebuilder.sys.ini</language>
        </languages>
      
    </administration>
    
    <!-- Plugins here -->
    <plugins>
        <plugin plugin="shinetheme" />
        <plugin plugin="shinethemeupdate" />
    </plugins>
</extension>